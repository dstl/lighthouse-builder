- job:
    name: 'package-pip-dependencies'
    description: 'Do not edit this job through the web!'
    display-name: 'Package Pip dependencies'
    scm:
        - git:
            url: git@github.com:dstl/lighthouse.git
            branches:
                - origin/master
    triggers:
        - github
    builders:
        - github-notifier
        - shell: |
            export VIRTUALENV_LOCATION="$WORKSPACE/virtualenv"
            export INTERNET_ACCESS="{{ internet_access }}"
            $WORKSPACE/bin/pip-download.sh
    wrappers:
        - ansicolor
    publishers:
        - github-notifier

- project:
    name: packaging
    jobs:
        - 'package-pip-dependencies'
