- job:
    name: 'lighthouse-build-pullrequests'
    description: 'Do not edit this job through the web!'
    display-name: 'Build Lighthouse PRs'
    scm:
        - git:
            url: git@github.com:dstl/lighthouse.git
            branches:
                - origin/master
            choosing-strategy: inverse
    triggers:
        - github
    builders:
        - github-notifier
        - shell: |
            export VIRTUALENV_LOCATION="$WORKSPACE/virtualenv"
            $WORKSPACE/bin/jenkins.sh
    wrappers:
        - ansicolor
    publishers:
        - github-notifier

- job:
    name: 'lighthouse-build'
    description: 'Do not edit this job through the web!'
    display-name: 'Build Lighthouse'
    scm:
        - git:
            url: git@github.com:dstl/lighthouse.git
            branches:
                - origin/master
    triggers:
        - github
    builders:
        - github-notifier
        - shell: |
            export VIRTUALENV_LOCATION="$WORKSPACE/virtualenv"
            $WORKSPACE/bin/jenkins.sh
    wrappers:
        - ansicolor
    publishers:
        - github-notifier

- job:
    name: 'lighthouse-deploy'
    description: 'Do not edit this job through the web!'
    display-name: 'Deploy Lighthouse'
    scm:
        - git:
            url: git@github.com:livestax/dstl-infrastructure.git
            branches:
                - origin/master
    builders:
        - shell: |
            ansible -i {{ lighthouse_inventory_file }} $WORKSPACE/playbook.yml
    wrappers:
        - ansicolor

- project:
    name: lighthouse
    jobs:
        - 'lighthouse-build'
        - 'lighthouse-build-pullrequests'
        - 'lighthouse-deploy'
