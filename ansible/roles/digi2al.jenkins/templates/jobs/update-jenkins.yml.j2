- job:
    name: 'update-jenkins'
    description: 'Do not edit this job through the web!'
    display-name: 'Update Jenkins'
    parameters:
        - string:
            name: BRANCH
            default: {{ builder_version }}
            description: "The branch you want to update from."
    scm:
        - git:
            url: {{ builder_repo }}
            branches:
                - "${BRANCH}"
            submodule:
                recursive: true
    triggers:
        - github
    builders:
        - github-notifier
        - shell: |
            cd ansible
            ./bootstrap.sh {{ jenkins_update_target }}
    wrappers:
        - ansicolor
{% if notify_github %}
    publishers:
        - github-notifier
{% endif %}

- job:
    name: 'package-rpms'
    description: 'Do not edit this job through the web!'
    display-name: 'Package RPMS'
    scm:
        - git:
            url: {{ builder_repo }}
            branches:
                - {{ builder_version }}
    builders:
        - github-notifier
        - shell: |
            cd ansible
            sudo ./getrpms.sh
    wrappers:
        - ansicolor
{% if notify_github %}
    publishers:
        - github-notifier
{% endif %}

- project:
    name: jenkins
    jobs:
        - 'update-jenkins'
        - 'package-rpms'
